            string day = " ", antrian = " ", customer = " ", satu = " ", dua = " ", tiga = " ", empat = " ", lima = " ", enam = " ", tujuh = " ", delapan = " ", sembilan = " ",  j = "Y";
          

            Console.WriteLine("SELAMAT DATANG DI RESTAURANT YUNIK");
