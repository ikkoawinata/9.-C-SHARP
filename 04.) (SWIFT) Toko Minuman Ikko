                            case 6 :
                Console.WriteLine(" 6.) ------ Lemon Tea ------ ");
                Console.WriteLine("Ketik ulang nama minuman yang dipilih [Lemon_Tea] : ");
                enam = Console.ReadLine();
                Console.WriteLine("untuk Lemon_Tea pesan berapa ? : ");
                n = int.Parse(Console.ReadLine());
                hasil6 = n * 10000;
                Console.WriteLine("Total harganya untuk pesanan Lemon_Tea :" + hasil6  + " ribu ");
                break;


                            case 7 :
                Console.WriteLine(" 7.)------ Cappucino Expresso ------ ");
                Console.WriteLine("Ketik ulang nama minuman yang dipilih [Cappucino_Expresso] : ");
                tujuh = Console.ReadLine();
                Console.WriteLine("untuk Cappucino_Expresso pesan berapa ? : ");
                n = int.Parse(Console.ReadLine());
                hasil7 = n * 10000;
                Console.WriteLine("Total harganya untuk pesanan Cappucino_Expresso :" + hasil7  + " ribu ");
                break;



                            case 8 :
                Console.WriteLine(" 8.)------ Ice Tea ------ ");
                Console.WriteLine("Ketik ulang nama minuman yang dipilih [Ice_Tea] : ");
                delapan = Console.ReadLine();
                Console.WriteLine("untuk [Ice_Tea] pesan berapa ? : ");
